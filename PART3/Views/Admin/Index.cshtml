@model IEnumerable<PART3.Models.Lecturer>

@{
    ViewData["Title"] = "Index";
}

<h1>Lecturer Claims Management</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.lecture_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lecturer_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lecturer_Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lecturer_Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lecturer_Contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Program)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Module_Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hours_Worked)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hourly_Rate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total_Payment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date_Of_Session)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UploadedFileName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.lecture_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lecturer_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lecturer_Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lecturer_Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lecturer_Contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Program)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Module_Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hours_Worked)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hourly_Rate)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total_Payment)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date_Of_Session)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UploadedFileName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <!--
            <td>
                    <a asp-action="Approve" asp-route-id="@item.Id">Approve</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Reject" asp-route-id="@item.Id">Reject</a>
                </td>
            -->
            
                <td>
                    @if (item.Status == "Pending") 
                    {
                        <a asp-action="Approve" asp-route-id="@item.Id" class="btn btn-sm btn-approve">Approve</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-approve">Details</a>
                        <a asp-action="Reject" asp-route-id="@item.Id" class="btn btn-sm btn-reject">Reject</a>
                    }
                    else
                    {

                    }
                </td>

        </tr>
}
    </tbody>
</table>
